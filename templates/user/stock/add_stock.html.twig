{% extends 'base.html.twig' %}

{% block title %}Vente de produit{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h2>Vente d’un produit – {{ location.name }}</h2>

        {% if app.flashes('success') %}
            <div class="alert alert-success">{{ app.flashes('success')[0] }}</div>
        {% endif %}
        {% if app.flashes('error') %}
            <div class="alert alert-danger">{{ app.flashes('error')[0] }}</div>
        {% endif %}

        <form method="post">
            <div class="mb-3">
                <label for="reference" class="form-label">Référence du produit</label>
                <input type="text" name="reference" id="reference" class="form-control" required>
            </div>

            <div class="mb-3">
                <label for="size" class="form-label">Taille</label>
                <input type="text" name="size" id="size" class="form-control" required>
            </div>

            <button type="submit" class="btn btn-danger">Valider la vente</button>
        </form>
    </div>
{% endblock %}
